<%= month_calendar(attribute: :record_date, events: user.daily_balances.all) do |date, balances| %>
  <div class="day-number">
    <%= date.day %>
  </div>
  <%# balances.each do |balance| %>
    <div class="simple-calendar-date">
      <% if BookRecord.find_by(record_date: date).present? %>
        <%= link_to "", book_records_path(params: {date: date}) %>
        <div class="amount-expenditure">
          予約: <%= BookRecord.where(record_date: date).count %>件
        </div>
      <% end %>
    </div>
  <%# end %>
<% end %>
